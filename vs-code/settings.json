{
    "jest.showCoverageOnLoad": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "window.zoomLevel": 2,
    "editor.tabSize": 2,
    "editor.copyWithSyntaxHighlighting": false,
    "workbench.sideBar.location": "left",
    "editor.mouseWheelZoom": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        "*.js": "javascript"
    },
    // disable formatOnSave so we can use prettier to fixOnSave
    "[javascript]": {
        "editor.formatOnSave": false,
        // "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[typescript]": {
        "editor.formatOnSave": false
    },
    "[vue]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "eslint.alwaysShowStatus": true,
    "eslint.autoFixOnSave": true,
    "eslint.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "typescript",
            "autoFix": true
        },
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "vue-html",
            "autoFix": true
        }
    ],
    "debug.node.autoAttach": "off",
    "debug.allowBreakpointsEverywhere": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "workbench.colorTheme": "Base16 Dark Unikitty",
    "editor.minimap.enabled": false,
    // vetur does not support linting of lang=TS script blocks
    "vetur.validation.script": false,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "oneDarkPro.vivid": true,
    "workbench.activityBar.visible": false,
    "editor.fontFamily": "'Input Mono Narrow', 'Dank Mono', 'Cascadia Code', 'Luculent'",
    "editor.lineHeight": 21,
    "editor.fontSize": 16,
    "workbench.editor.showTabs": false,
    "terminal.integrated.fontWeight": "600",
    "terminal.integrated.fontWeightBold": "600",
    "font-switcher.fontFamily": "'Operator Mono', 'M+ 1mm', 'Luculent', 'Input Mono Narrow', 'Cascadia Code', 'Dank Mono', Menlo, 'FiraFlott', 'Oxygen Mono'",
    "javascript.implicitProjectConfig.checkJs": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "Z",
                "Z"
            ], // ZZ write quit
            "commands": [
                ":wq"
            ]
        },
        {
            "before": [
                ":"
            ], // : shows the command palette
            "commands": [
                "workbench.action.showCommands",
            ]
        },
        {
            "before": [
                "<leader>",
                "m"
            ],
            "commands": [
                "bookmarks.toggle"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                "bookmarks.list"
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ], // jj esc
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.useSystemClipboard": true,
    "workbench.panel.defaultLocation": "right",
}
